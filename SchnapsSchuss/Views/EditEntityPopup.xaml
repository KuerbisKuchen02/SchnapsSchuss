<?xml version="1.0" encoding="utf-8"?>

<mct:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
           xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
           xmlns:mct="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
           xmlns:system="clr-namespace:System;assembly=System.Runtime"
           x:Class="SchnapsSchuss.Views.EditEntityPopup"
           x:TypeArguments="system:String"
           Style="{StaticResource Popup}"
           MaximumWidthRequest="450"
           MaximumHeightRequest="650">
    
    <VerticalStackLayout>
        <FlexLayout JustifyContent="SpaceBetween">
            <Label Text="{Binding PopupTitle}" HorizontalTextAlignment="Center" FontSize="25"/>
            <Button Text="LÃ¶schen" 
                    IsVisible="{Binding IsDeletable}"
                    Command="{Binding DeleteSelected}"
                    Style="{StaticResource CancelButton}"
                    TextColor="{StaticResource Black}" />
        </FlexLayout>
        <ContentView x:Name="Properties" Margin="0, 20"/>
        <FlexLayout JustifyContent="End">
            <Button Text="Abbrechen"
                    BackgroundColor="{StaticResource Tertiary}"
                    TextColor="Black"
                    Margin="0, 0, 10, 0"
                    Command="{Binding CancelEdit}"/>
            <Button Text="Speichern" 
                    Style="{StaticResource SubmitButton}"
                    Command="{Binding SaveEdit}"/>
        </FlexLayout>
    </VerticalStackLayout>
</mct:Popup>