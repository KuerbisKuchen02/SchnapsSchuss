<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:SchnapsSchuss.ViewModels"
             x:Class="SchnapsSchuss.Views.AdminPage">

    <ContentPage.BindingContext>
        <vm:AdminPageViewModel />
    </ContentPage.BindingContext>
    
    <ContentPage.Content>
        <ScrollView>
            <VerticalStackLayout VerticalOptions="Center">
                <Grid
                    Padding="80,0"
                    VerticalOptions="Center"
                    RowSpacing="20"
                    ColumnSpacing="20"
                >
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Button HeightRequest="200" FontSize="40" Grid.Row="0" Grid.Column="0" Text="GetrÃ¤nke" Command="{Binding DrinkButtonCommand}" />
                    <Button HeightRequest="200" FontSize="40" Grid.Row="0" Grid.Column="1" Text="Gerichte" Command="{Binding FoodButtonCommand}" Style="{StaticResource SecondaryMenuButton}" />
                    <Button HeightRequest="200" FontSize="40" Grid.Row="0" Grid.Column="2" Text="Disziplinen" Command="{Binding DisciplineButtonCommand}" />
                    <Button HeightRequest="200" FontSize="40" Grid.Row="1" Grid.Column="0" Text="Munition" Command="{Binding MunitionButtonCommand}" Style="{StaticResource SecondaryMenuButton}" />
                    <Button HeightRequest="200" FontSize="40" Grid.Row="1" Grid.Column="1" Text="Mitglieder" Command="{Binding MemberButtonCommand}" />
                    <Button HeightRequest="200" FontSize="40" Grid.Row="1" Grid.Column="2" Text="Sonstiges" Command="{Binding OthersButtonCommand}" Style="{StaticResource SecondaryMenuButton}" />
                </Grid>
            </VerticalStackLayout>
        </ScrollView>  
    </ContentPage.Content>
</ContentPage>