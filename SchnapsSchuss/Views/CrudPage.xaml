<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:SchnapsSchuss.ViewModels"
             xmlns:views="clr-namespace:SchnapsSchuss.Views"
             xmlns:models="clr-namespace:SchnapsSchuss.Models.Entities"
             x:Class="SchnapsSchuss.Views.CrudPage">
    
    <ContentPage.BindingContext>
        <viewmodels:CrudViewModel />
    </ContentPage.BindingContext>
    
    <VerticalStackLayout Padding="20">
        <Label Text="Generische Tabelle"
               FontSize="20"
               HorizontalOptions="Center" />

        <views:GenericTableView x:TypeArguments="models:Article"
                                      ItemsSource="{Binding User}" />
    </VerticalStackLayout>
</ContentPage>