<mct:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
           xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
           xmlns:mct="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
           xmlns:system="clr-namespace:System;assembly=System.Runtime"
           xmlns:vm="clr-namespace:SchnapsSchuss.ViewModels"
           xmlns:views="clr-namespace:SchnapsSchuss.Views"
           x:Class="SchnapsSchuss.Views.GunOwnershipPopUp"
           x:TypeArguments="system:String">

    <mct:Popup.Resources>
        <Style TargetType="{x:Type views:GunOwnershipPopUp}">
            <Setter Property="WidthRequest" Value="400" />
            <Setter Property="HeightRequest" Value="200" />
            <Setter Property="Padding" Value="0" />
            <Setter Property="Margin" Value="0" />

        </Style>
    </mct:Popup.Resources>

    <Grid RowDefinitions="40,*,*">

        <Label 
            Grid.Row="0"
            Text="Waffenbesitzschein" 
            FontSize="Large"
            HorizontalTextAlignment="Center"
            VerticalTextAlignment="Center"
            />

        <Label
            Grid.Row="1"
            Text="{Binding LabelText}" 
            TextColor="{Binding LabelTextColor}"
            FontSize="Medium"
            HorizontalTextAlignment="Center"
            VerticalTextAlignment="Center"
            />

        
        <Button 
            Grid.Row="2"
            Text="Okay"
            FontSize="Medium"
            Style="{StaticResource SubmitButton}"
            Command="{Binding CloseCommand}"
            />



    </Grid>
    
</mct:Popup>